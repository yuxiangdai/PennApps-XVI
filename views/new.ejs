<!-- used for creating a new event -->
<% include ../partials/header %>
<!-- form goes here, with text fields and button to submit -->
 <div class="page-header" style="padding-left:25px;">
  <h1>Create New Event <small>Required fields have an asterisk * by them</small></h1>
 </div>
  <form action="/new" method="post" class="form-horizontal">
    <div class="form-group jumbotron">
        <div class="col-sm-10" style="padding-left:100px;">
            <label class="control-label width:30%" for="pwd">Event name *</label>
            <input name='eventName' type="text" class="form-control" placeholder="Event name" style="width:70%">
            <label class="control-label width:30%" for="pwd">Number of people *</label>
            <input name='numPeople' type="text" class="form-control" placeholder="Number of people" style="width:70%">
            <label class="control-label width:30%" for="pwd">Location *</label>
            <input name='location' type="text" class="form-control" placeholder="Location" style="width:70%">
            <label class="control-label width:30%" for="pwd">Time *</label>
            <div class="row">
              <div class="col-lg-6">
                <div class="input-group">
                  <span style="float:left;">
                      <input name="hour" type="number" placeholder="Hour" class="form-control" aria-label="...">
                  </span>
                  <span style="float:right; margin-left:20px">
                      <input type="radio" name="ampm" value="am" checked>AM<br>
                      <input type="radio" name="ampm" value="pm">PM<br>
                  </span>
                  <span style="float:right; margin-left:20px">
                      <input name="minute" type="number" placeholder="Minute" class="form-control" aria-label="...">
                  </span>
                </div><!-- /input-group -->
              </div><!-- /.col-lg-6 -->
            </div><!-- /.row -->
            <label class="control-label width:30%" for="pwd">Description</label>
            <input name='description' type="text" class="form-control" placeholder="Description" style="width:70%">
            <label class="control-label width:30%" for="pwd">Event Passcode (to edit/ delete events) *</label>
            <input name='passcode' type="text" class="form-control" placeholder="Event Passcode (to edit/ delete events)" style="width:70%">
        </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        <!-- <input name='numPeople' type="text" class="form-control" placeholder="Number of people" style="width:70%"> -->
      </div>
    </div>
    <div class="form-group" style="text-align: center;>
      <div class="col-sm-offset-2 col-sm-10" ">
        <button href="index.ejs" id="create" type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </form>

