<% include ../partials/events-header %>

<div class="container">
        <h2>Event: <%= id %></h2>
        <div class="row">
                <div class="col-md-8">
                  <div class="page-header">
                    <h1><small class="pull-right"></small> Description </h1>
                  </div> 
                  <div><%= description %></div>
                </div>
            </div>

        <div class="row">
                <div class="col-md-8">
